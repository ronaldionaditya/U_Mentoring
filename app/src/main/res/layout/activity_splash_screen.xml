<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashScreenActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="56dp"
        android:src="@drawable/splashscreen" />

    <TextView
        android:id="@+id/tvMentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="332dp"
        android:layout_toEndOf="@+id/ivSplash"
        android:fontFamily="@font/abrilfatface"
        android:text="mentoring"
        android:textColor="@color/hijauLogo"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMentor"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="82dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Jago koding bersama Udacoding" />

</RelativeLayout>