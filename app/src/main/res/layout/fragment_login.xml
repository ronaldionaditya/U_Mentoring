<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/splashscreen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivSplash"
            android:fontFamily="@font/abrilfatface"
            android:text="mentoring"
            android:textColor="@color/hijauLogo"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="54dp"
            android:text="Email Address" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="351dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_edit"
            android:drawableStart="@drawable/email"
            android:drawablePadding="12dp"
            android:hint="user@man.com"
            android:inputType="textEmailAddress"
            android:paddingStart="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Password" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="351dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_edit"
            android:drawableStart="@drawable/password"
            android:drawableEnd="@drawable/viewpass"
            android:drawablePadding="12dp"
            android:hint="****************"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="267dp"
            android:layout_marginTop="5dp"
            android:text="Forgot Password"
            android:textColor="@color/hijauFont" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_button"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>